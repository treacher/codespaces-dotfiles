#!/bin/bash

echo "Installing dependencies"
/bin/bash -c "sudo apt-get update && sudo apt-get -qq install --no-install-recommends $(cat manifest | sed ':a;N;$!ba;s/\n/ /g')"

echo "Symlinking dotfiles"
ln -sf ~/.dotfiles/zshrc ~/.zshrc

echo -e
echo "========================"
echo "| Run: source ~/.zshrc |"
echo "========================"
echo -e
